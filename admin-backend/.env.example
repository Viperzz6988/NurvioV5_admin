# Server
NODE_ENV=development
PORT=3000
SESSION_SECRET=replace-with-a-long-random-string

# Database (use a real, remote server)
# PostgreSQL example:
# DATABASE_URL=postgres://user:pass@host:5432/dbname
# MySQL example:
# DATABASE_URL=mysql://user:pass@host:3306/dbname
DATABASE_URL=

# SSL for database connections (if your provider requires it)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# CORS
# For development, you can allow your local frontend
CORS_ORIGIN=http://localhost:5173

# SMTP (use a real SMTP server)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=No Reply <no-reply@example.com>
CONTACT_TO=Admin <admin@example.com>

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30