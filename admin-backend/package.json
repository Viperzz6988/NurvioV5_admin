{
  "name": "nurvio-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --exec node --loader ts-node/esm src/server.ts",
    "build": "tsc && npm run build:frontend",
    "build:frontend": "node ./scripts/build-frontend.mjs",
    "start": "node dist/src/server.js",
    "migrate": "node dist/scripts/migrate.js",
